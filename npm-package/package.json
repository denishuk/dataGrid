  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/denishuk/dataGrid.git"
  },
  "bugs": {
    "url": "https://github.com/denishuk/dataGrid"
  },
  "homepage": "https://github.com/denishuk/dataGrid#readme",
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    }
  },
